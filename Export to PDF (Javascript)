
Created an app script to Export to PDF by refering to Youtube Tutorials.

function exportAndSend() {
  const date = new Date();
  const currentMonth = date.toLocaleString('en-US', {month:'long'});

  let revenueStats = DriveApp.getFileById('1ofwX3B9utQFIcmdjDvK3Y77EVdUs8IknX54diTkT574');
  
  let blob = revenueStats.getAs('application/pdf');
  let pdf = DriveApp.getFolderById('1t83E86kTyHHy5Z-01IW_OvAFaRBDkjHE')
  .createFile(blob)
  .setName('Revenue Stats ${currentMonth}');

sendEmail_(pdf,currentMonth);
}


function sendEmail_(pdf, currentMonth){
GmailApp.sendEmail('hafizazmi94@gmail.com', 'Revenue Stats ${currentMonth}','Dear stakeholder, please find the current revenue stats attached.', {attachments:[pdf]});


}
